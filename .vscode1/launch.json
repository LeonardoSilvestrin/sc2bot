{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "SC2 Bot - Local (run.py)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/run.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "SC2BOT_DEV_LOG": "1",
        "SC2BOT_DEV_LOG_DIR": "${workspaceFolder}/logs"
      }
    },
    {
      "name": "SC2 Bot - Ladder (run.py --LadderServer)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/run.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "args": ["--LadderServer"],
      "env": {
        "SC2BOT_DEV_LOG": "0"
      }
    },
    {
      "name": "SC2 Bot - Local (module bot.main)",
      "type": "python",
      "request": "launch",
      "module": "bot.main",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "SC2BOT_DEV_LOG": "1",
        "SC2BOT_DEV_LOG_DIR": "${workspaceFolder}/logs"
      }
    }
  ]
}